<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/itemImgView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="start|center_vertical"
                android:layout_weight="0" />

            <LinearLayout
                android:id="@+id/layout_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.view.MTextView
                    android:id="@+id/itemNameTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Name "
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <com.view.MTextView
                    android:id="@+id/itemDescTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Item descriptions"
                    android:textSize="12dp" />

                <com.view.MTextView
                    android:id="@+id/itemPriceTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 8,999"
                    android:textColor="#4CAF50"
                    android:textSize="14dp" />


                <com.view.MTextView
                    android:id="@+id/dealEndTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Ends on: 27th may 2017"
                    android:textColor="#FF0000"
                    android:visibility="gone"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/wishlistImgView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="end|top"
                android:layout_weight="0"
                android:src="@mipmap/ic_fav_border" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>