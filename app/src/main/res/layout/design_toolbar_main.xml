<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appThemeColor_1"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/menuImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:padding="10dp"
                android:src="@mipmap/ic_drawer_menu"
                android:tint="@color/appThemeColor_TXT_1" />


            <ImageView
                android:id="@+id/backImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:src="@mipmap/ic_back_arrow"
                android:tint="@color/appThemeColor_TXT_1"
                android:visibility="gone" />

            <com.view.MTextView
                android:id="@+id/titleTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/appThemeColor_TXT_1"
                android:textSize="@dimen/txt_size_18" />

            <ImageView
                android:id="@+id/searchImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_search_header"
                android:tint="@color/appThemeColor_TXT_1" />

            <ImageView
                android:id="@+id/listChangeImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_view_list"
                android:tint="@color/appThemeColor_TXT_1" />

            <RelativeLayout
                android:id="@+id/cartArea"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/cartImgView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_cart"
                    android:tint="@color/appThemeColor_TXT_1" />

                <com.view.MTextView
                    android:id="@+id/cartCountTxt"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/appThemeColor_TXT_1"
                    android:textSize="@dimen/txt_size_14"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>