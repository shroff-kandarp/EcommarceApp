<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.view.MTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Manufacturer"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_16" />

        <RelativeLayout
            android:id="@+id/manufacturerArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/manufacturerSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:src="@mipmap/ic_arrow_down" />

        </RelativeLayout>


        <com.view.MTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Categories"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/categoryContainerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categoriesArea"
                android:layout_marginTop="-5dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/dotted_border"
                android:orientation="vertical"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/categoriesArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp">

                <com.view.MTextView
                    android:id="@+id/categoryTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="Select Category"
                    android:textColor="#272727"
                    android:textSize="@dimen/dimen_14sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_arrow_down" />

            </RelativeLayout>
        </RelativeLayout>

        <com.view.MTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Filter"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/filterContainerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filterArea"
                android:layout_marginTop="-5dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/dotted_border"
                android:orientation="vertical"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/filterArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/filterSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_arrow_down" />

            </RelativeLayout>
        </RelativeLayout>


        <com.view.MTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Stores"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_16" />

        <RelativeLayout
            android:id="@+id/storeArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp">

            <com.view.MTextView
                android:id="@+id/storesTxtView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:paddingStart="10dp"
                android:text="Default"
                android:textColor="#272727"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:src="@mipmap/ic_arrow_down" />

        </RelativeLayout>

        <com.view.MTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Downloads"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/downloadsContainerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/downloadsArea"
                android:layout_marginTop="-5dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/dotted_border"
                android:orientation="vertical"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/downloadsArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/downloadsSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_arrow_down" />

            </RelativeLayout>
        </RelativeLayout>


        <com.view.MTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Related Products"
            android:textColor="@color/appThemeColor_1"
            android:textSize="@dimen/txt_size_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/relatedProductsContainerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relatedProductArea"
                android:layout_marginTop="-5dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/dotted_border"
                android:orientation="vertical"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/relatedProductArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp">

                <com.view.MTextView
                    android:id="@+id/relatedProductsTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingStart="10dp"
                    android:text="Select Related Products"
                    android:textColor="#272727"
                    android:textSize="@dimen/dimen_14sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_arrow_down" />

            </RelativeLayout>
        </RelativeLayout>


        <include
            android:id="@+id/productInfoAddBtn"
            layout="@layout/btn_type_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_btn_height"
            android:layout_gravity="bottom"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</ScrollView>
