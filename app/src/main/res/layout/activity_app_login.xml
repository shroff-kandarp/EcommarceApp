<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appThemeColor_1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/yourLogoImgView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:src="@drawable/your_logo"
            android:tint="@color/appThemeColor_TXT_1" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/closeLoginImgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="12dp"
            android:src="@mipmap/ic_clear"
            android:tint="@color/appThemeColor_TXT_1" />

        <com.view.MTextView
            android:id="@+id/headerTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yourLogoImgView"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/appThemeColor_TXT_1"
            android:textSize="@dimen/txt_size_18" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fbImgView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="44dp"
                    android:src="@mipmap/facebook" />


                <ImageView
                    android:id="@+id/imageGoogle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/google" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="#efefef" />


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:rotation="-45"
                    android:src="@drawable/square" />

                <com.view.MTextView
                    android:id="@+id/orTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="OR"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fragmentContainerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_btn_height"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <include
                android:id="@+id/signInBtn"
                layout="@layout/btn_type_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/all_btn_height"
                android:layout_gravity="bottom"
                android:layout_marginEnd="5dp"
                android:layout_weight="1" />

            <include
                android:id="@+id/signUpBtn"
                layout="@layout/btn_type_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/all_btn_height"
                android:layout_marginStart="5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <com.view.MTextView
            android:id="@+id/skipTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:padding="10dp"
            android:text="SKIP"
            android:textColor="@color/appThemeColor_TXT_1"
            android:textSize="@dimen/txt_size_18" />

    </LinearLayout>
</LinearLayout>
