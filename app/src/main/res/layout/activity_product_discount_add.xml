<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/design_toolbar_general"
        app:layout_scrollFlags="scroll|enterAlways" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/containerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.view.MTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Customer Group"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/txt_size_16" />

            <RelativeLayout
                android:id="@+id/customerGroupArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/customerGroupSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_arrow_down" />

            </RelativeLayout>


            <include
                android:id="@+id/quantityBox"
                layout="@layout/editbox_form_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <include
                android:id="@+id/priorityBox"
                layout="@layout/editbox_form_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <include
                android:id="@+id/priceBox"
                layout="@layout/editbox_form_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <com.view.MTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date Start"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/txt_size_16" />

            <com.view.MTextView
                android:id="@+id/dateStartSelectTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:drawableEnd="@mipmap/ic_calendar"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_10dp"
                android:textColor="#272727"
                android:textSize="@dimen/txt_size_16" />

            <com.view.MTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date End"
                android:textColor="@color/appThemeColor_1"
                android:textSize="@dimen/txt_size_16" />

            <com.view.MTextView
                android:id="@+id/dateEndSelectTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:drawableEnd="@mipmap/ic_calendar"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_10dp"
                android:textColor="#272727"
                android:textSize="@dimen/txt_size_16" />


            <include
                android:id="@+id/productInfoAddBtn"
                layout="@layout/btn_type_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_btn_height"
                android:layout_gravity="bottom"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
